{
  "name": "simple-signal-client",
  "version": "3.0.0",
  "description": "socket.io signalling solution for simple-peer",
  "main": "src/index.js",
  "author": "Thomas Mullen",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "cuid": "^2.0.2",
    "inherits": "^2.0.3",
    "nanobus": "^4.3.3",
    "simple-peer": "^9.6.2"
  },
  "scripts": {
    "build": "browserify src/index.js -s SimpleSignalClient | minify >  ../dist/simple-signal-client.min.js",
    "build-dev": "browserify src/index.js -s SimpleSignalClient -o ../dist/simple-signal-client.js",
    "test": "node support/server.js > /dev/null | npm run test-node",
    "test-browser": "airtap -- test/*.js",
    "test-browser-local": "airtap --local -- test/*.js",
    "test-node": "WRTC=wrtc tape test/*.js"
  },
  "devDependencies": {
    "airtap": "^0.1.0",
    "babel-minify": "^0.5.0",
    "browserify": "^14.1.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^1.7.3",
    "standard": "^8.6.0",
    "tape": "^4.6.3",
    "wrtc": "^0.4.2"
  }
}
